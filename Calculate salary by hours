#include <stdio.h>

int main()
{
	const double RATE=12.5;
	const int STANDARD=40;
	double pay=0.0;
	int hours;
	
	printf("Please input working hours:");
	scanf("%d",&hours);
	if(hours>STANDARD)
	   pay=STANDARD*RATE+(hours-STANDARD)*(RATE*1.5);
	else
	   pay=hours*RATE;
	   
	   printf("Your salary is:%f\n",pay);

	return 0;
}
